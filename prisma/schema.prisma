generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  product_id     Int     @id @default(autoincrement())
  name           String
  description    String
  cost           Decimal
  image_filename String?
  stock         Int      @default(0)
}

model User {
  id         Int    @id @default(autoincrement())
  email      String @unique
  password   String
  first_name String
  last_name  String
}
